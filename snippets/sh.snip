snippet ifeq
	if [ "${1}" == "${2}" ]; then
		${3}
	fi

snippet ifnull
	if [[ -z ${1} ]]; then
		${2}
	fi

snippet ifnotnull
	if [[ -n ${1} ]]; then
		${2}
	fi

snippet iffail
	if [ "$?" != "0" ]; then
		${1}
		exit 1
	fi


snippet promptyesno
	read -p "Are you sure? (y/N) " -n 2 -r
	if [[ ! $REPLY =~ ^[Yy]$ ]]; then
		${1:echo stop here}
		exit 1
	fi


